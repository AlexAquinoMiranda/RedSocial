<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PerfilUsuario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="350dp"
        android:layout_height="252dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfilUser"
            android:layout_width="84dp"
            android:layout_height="86dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/perfilUsuarioName"
            app:layout_constraintEnd_toStartOf="@+id/ajustes"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/perfilUsuarioName"
            android:layout_width="168dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="casual"
            android:text="user"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.424" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ajustes"
            android:layout_width="52dp"
            android:layout_height="57dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="116dp"
            android:clickable="true"
            android:contentDescription="TODO"
            app:backgroundTint="#2C2828"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfilUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166"
            app:maxImageSize="30dp"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/cantidadPublicacion"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="142dp"
            android:layout_marginBottom="57dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/perfilUsuarioName"
            app:layout_constraintEnd_toStartOf="@+id/ajustes"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfilUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="176dp"
            android:text="Publicaciones"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/perfilDescripcionUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfilUser"
            app:layout_constraintTop_toBottomOf="@+id/cantidadPublicacion"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/cantidadContac"
            android:layout_width="49dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="117dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ajustes"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/cantidadPublicacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="78dp"
            android:text="Contactos"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/cantidadContac"
            app:layout_constraintVertical_bias="0.119" />

        <TextView
            android:id="@+id/perfilDescripcionUser"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="cursive"
            android:textAllCaps="false"
            android:textColor="#FDFCFC"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilUsuarioName"
            app:layout_constraintVertical_bias="0.103" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="144dp"
            android:layout_height="38dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilDescripcionUser"
            app:layout_constraintVertical_bias="0.168">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Editar"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="152dp"
            android:layout_height="39dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toEndOf="@+id/cardView9"
            app:layout_constraintTop_toBottomOf="@+id/perfilDescripcionUser"
            app:layout_constraintVertical_bias="0.162">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="Compartir perfil"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FotosUser"
        android:layout_width="346dp"
        android:layout_height="369dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:spanCount="3" />
</androidx.constraintlayout.widget.ConstraintLayout>