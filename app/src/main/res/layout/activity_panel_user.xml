<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PanelUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="357dp"
        android:layout_height="266dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfilUsuarios"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/perfilUsuarioNamePublic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.297"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/perfilUsuarioNamePublic"
            android:layout_width="168dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="casual"
            android:text="user"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />

        <TextView
            android:id="@+id/cantidadPublicacionPubli"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="57dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/perfilUsuarioNamePublic"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfilUsuarios"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="176dp"
            android:text="Publicaciones"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/perfilDescripcionUserPublic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfilUsuarios"
            app:layout_constraintTop_toBottomOf="@+id/cantidadPublicacionPubli"
            app:layout_constraintVertical_bias="0.361" />

        <TextView
            android:id="@+id/cantidadContacPubl"
            android:layout_width="49dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="117dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cantidadPublicacionPubli"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="78dp"
            android:text="Contactos"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toEndOf="@+id/textView30"
            app:layout_constraintTop_toBottomOf="@+id/cantidadContacPubl"
            app:layout_constraintVertical_bias="0.011" />

        <TextView
            android:id="@+id/perfilDescripcionUserPublic"
            android:layout_width="344dp"
            android:layout_height="45dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="64dp"
            android:fontFamily="cursive"
            android:textAllCaps="false"
            android:textColor="#FDFCFC"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilUsuarioNamePublic"
            app:layout_constraintVertical_bias="0.103" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="144dp"
            android:layout_height="38dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilDescripcionUserPublic"
            app:layout_constraintVertical_bias="0.552">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:text="Seguir"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="147dp"
            android:layout_height="37dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintStart_toEndOf="@+id/cardView9"
            app:layout_constraintTop_toBottomOf="@+id/perfilDescripcionUser"
            app:layout_constraintVertical_bias="0.162">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Mensaje"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FotosUserPublic"
        android:layout_width="361dp"
        android:layout_height="354dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.117"
        app:spanCount="3" />
</androidx.constraintlayout.widget.ConstraintLayout>